model Link {
    id     String @id @default(uuid())
    userId String // Foreign key to User
    user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

    // Core link properties
    type   LinkType @default(default)
    title  String
    url    String
    icon   String?
    color  String   @default("#000000")
    active Boolean  @default(true)
    style  String   @default("default")

    // Optional fields for enhanced functionality
    thumbnail String?
    clicks    Int?     @default(0)
    duration  String? // For music/video links
    images    String[] // For gallery links (array of image URLs)

    // Unified metadata as JSON
    metadata Json? // Store type-specific metadata as JSON

    //Current Status OF Link 
    status LinkStatus @default(DRAFT)

    // Timestamps
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    // Index for performance
    @@index([userId])
    @@index([type])
    @@index([active])
}

enum LinkType {
    music
    video
    event
    gallery
    contact
    social
    default
}

enum LinkStatus {
    DRAFT
    PUBLISHED
}
