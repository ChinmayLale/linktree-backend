model User {
  id              String        @id @default(uuid())
  email           String        @unique
  username        String        @unique
  name            String
  bio             String?
  tags            String[] // array of tags for categorization
  avatarUrl       String? // profile picture
  provider        AuthProvider? // for OAuth: 'google', 'github', etc.
  password        String? // optional for credentials-based auth
  isVerified      Boolean       @default(false)
  isProfilePublic Boolean       @default(true)

  links Link[]

  themeId String?        @default("clean") // One theme per user
  theme   ThemeSettings? @relation(fields: [themeId], references: [id])

  views Int @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

enum AuthProvider {
  GOOGLE
  GITHUB
  CREDENTIALS
}
